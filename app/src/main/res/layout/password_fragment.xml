<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/password_container_view"
    android:layout_marginHorizontal="40dp"
    android:layout_marginVertical="120dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="20dp"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="Reset Password"
        android:textSize="40dp"
        android:textColor="@color/black"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/PostItem.Color"
        android:text="@string/change_email_option"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reset_email_input"
        android:textColor="@color/black"
        />

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:theme="@style/PostItem.Color"
        android:text="@string/new_password"/>

    <EditText
        android:id="@+id/reset_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:text="@string/reset_password_email"
        android:theme="@style/Button.Password"
        android:id="@+id/reset_password_button"
        />

</LinearLayout>