<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Settings.Color" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PostItem.Color" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Password" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Timeline" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/timeline_background</item>
    </style>

    <style name="Header.Username" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/header_color</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.SocialApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SocialApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SocialApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>